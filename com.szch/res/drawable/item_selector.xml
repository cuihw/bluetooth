<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/button_pressed" android:state_selected="true" android:state_pressed="true"/>
    
    <item android:drawable="@drawable/button_normal" android:state_selected="false" />

    <!-- 获得焦点时的图片背景 -->
    <item android:drawable="@drawable/button_pressed" android:state_focused="true"/>

</selector>